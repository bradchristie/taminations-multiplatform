<tamination title="Interlocked Diamond Circulate">

  <tam title="Interlocked Diamond Circulate"
       from="Right-Hand Interlocked Diamonds"
       formation="Interlocked Diamonds RH Girl Points">
    <path numbers="6 3" couples="3 1">
      <move select="Lead Right" beats="3" scaleX="3" />
    </path>
    <path numbers="2 7" couples="3 1">
      <move select="Stand" />
      <move select="Lead Right" beats="2" scaleX="3" scaleY="3" />
    </path>
    <path numbers="5 4" couples="4 2">
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3" />
    </path>
    <path numbers="8 1" couples="2 4">
      <move select="Lead Right" beats="3" scaleY="3" />
    </path>
  </tam>

  <tam title="Interlocked Diamond Circulate"
       from="Left-Hand Interlocked Diamonds"
       formation="Interlocked Diamonds LH Girl Points">
    <path>
      <move select="Lead Left" beats="3" scaleX="3" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleY="3" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleX="3" scaleY="3" />
    </path>
    <path>
      <move select="Stand" beats="1" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY="3" />
    </path>
  </tam>

  <tam title="Interlocked Diamond Circulate"
       from="Facing Interlocked Diamonds 1">
    <formation>
      <dancer gender="boy" x="0" y="-3" angle="180"/>
      <dancer gender="girl" x="-3" y="-2" angle="270"/>
      <dancer gender="boy" x="0" y="-1" angle="180"/>
      <dancer gender="girl" x="3" y="-2" angle="90"/>
    </formation>
    <path>
      <move select="Lead Right Passing" beats="3" scaleX="3"/>
    </path>
    <path>
      <move select="Lead Left Passing" beats="3" scaleY="3"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3"/>
    </path>
    <path>
      <move select="Lead Left Passing" beats="3" scaleX="3" scaleY="3"/>
    </path>
  </tam>

  <tam title="Interlocked Diamond Circulate"
       from="Facing Interlocked Diamonds 2">
    <formation>
      <dancer gender="boy" x="0" y="-3" angle="0"/>
      <dancer gender="girl" x="-3" y="-2" angle="90"/>
      <dancer gender="boy" x="0" y="-1" angle="0"/>
      <dancer gender="girl" x="3" y="-2" angle="270"/>
    </formation>
    <path>
      <move select="Lead Left Passing" beats="3" scaleX="3"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3"/>
    </path>
    <path>
      <move select="Lead Left Passing" beats="3" scaleX="3" scaleY="3"/>
    </path>
    <path>
      <move select="Lead Right Passing" beats="3" scaleY="3"/>
    </path>
  </tam>

  <tam title="Interlocked Diamond Circulate"
       from="Right-Hand Point-to-Point Interlocked Diamonds"
       formation="Interlocked Diamonds RH PTP Girl Points">
    <path numbers="2 7">
      <move select="Lead Right" beats="4" scaleX="4"/>
    </path>
    <path numbers="5 4">
      <move select="Lead Right" beats="3" scaleY="4"/>
    </path>
    <path numbers="8 1">
      <move select="Lead Right" beats="3" scaleX="2" />
    </path>
    <path numbers="6 3">
      <move select="Lead Right" beats="3" scaleY="2" />
    </path>
  </tam>

  <tam title="Interlocked Diamond Circulate"
       from="Left-Hand Point-to-Point Interlocked Diamonds"
       formation="Interlocked Diamonds LH PTP Girl Points">
    <path>
      <move select="Lead Left" beats="3" scaleX="2" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleY="4"/>
    </path>
    <path>
      <move select="Lead Left" beats="4" scaleX="4"/>
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleY="2" />
    </path>
  </tam>

  <tam title="Interlocked Diamond Circulate"
       from="Facing Interlocked Diamonds 3">
    <formation>
      <dancer gender="boy" x="-1" y="-3" angle="90"/>
      <dancer gender="girl" x="0" y="-1" angle="0"/>
      <dancer gender="boy" x="1" y="-3" angle="270"/>
      <dancer gender="girl" x="0" y="-5" angle="0"/>
    </formation>
    <path>
      <move select="Lead Right Passing" beats="3" scaleX="4"/>
    </path>
    <path>
      <move select="Lead Left Passing" beats="3" scaleY="4"/>
    </path>
    <path>
      <move select="Lead Right Passing" beats="3" scaleX="2"/>
    </path>
    <path>
      <move select="Lead Left Passing" beats="3" scaleY="2"/>
    </path>
  </tam>

  <tam title="Interlocked Diamond Circulate"
       from="Facing Interlocked Diamonds 4">
    <formation>
      <dancer gender="boy" x="-1" y="-3" angle="270"/>
      <dancer gender="girl" x="0" y="-1" angle="180"/>
      <dancer gender="boy" x="1" y="-3" angle="90"/>
      <dancer gender="girl" x="0" y="-5" angle="180"/>
    </formation>
    <path>
      <move select="Lead Left Passing" beats="3" scaleX="2"/>
    </path>
    <path>
      <move select="Lead Right Passing" beats="3" scaleY="4"/>
    </path>
    <path>
      <move select="Lead Left Passing" beats="3" scaleX="4"/>
    </path>
    <path>
      <move select="Lead Right Passing" beats="3" scaleY="2"/>
    </path>
  </tam>

</tamination>
