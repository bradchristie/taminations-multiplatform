<tamination title="Single Rotate">

  <tam title="Heads Single Rotate"
       from="Static Square"
       formation="Static Square" group=" " >
    <path numbers="1 8">
      <move select="Quarter Right" offsetY="-1" />
      <move select="Lead Left" beats="3" scaleX="3" />
      <move select="Forward" />
    </path>
    <path numbers="2 7">
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2" />
      <move select="Forward 2" />
    </path>
    <path numbers="5 4">
      <move select="Forward 2" hands="right" />
    </path>
    <path numbers="3 6">
      <move select="Forward 2" hands="left" />
    </path>
  </tam>

  <tam title="Sides Single Rotate"
       from="Static Square"
       formation="Static Square" group=" " >
    <path>
      <move select="Forward 2" hands="right" />
    </path>
    <path>
      <move select="Forward 2" hands="left" />
    </path>
    <path>
      <move select="Quarter Right" offsetY="-1" />
      <move select="Lead Left" beats="3" scaleX="3" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2" />
      <move select="Forward 2" />
    </path>
  </tam>

  <tam title="Heads Single Rotate 1/2"
       from="Static Square"
       formation="Static Square" group=" " >
    <path>
      <move select="Quarter Right" offsetY="-1" />
      <move select="Lead Left" beats="3" scaleX="3" />
      <move select="Forward 3" />
      <move select="Lead Left" beats="2.5" scaleX="2" scaleY="1.5"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2" />
      <move select="Forward 2" />
      <move select="Lead Left" beats="3" scaleX="2" scaleY="2"/>
      <move select="Forward 2" offsetX=".5"/>
    </path>
    <path>
      <move select="Forward 2" offsetX="-.5" hands="right" />
    </path>
    <path>
      <move select="Forward 2" offsetX="-.5" hands="left" />
    </path>
  </tam>

  <tam title="Sides Single Rotate 1/2"
       from="Static Square"
       formation="Static Square" group=" " >
    <path>
      <move select="Forward 2" offsetX="-.5" hands="right" />
    </path>
    <path>
      <move select="Forward 2" offsetX="-.5" hands="left" />
    </path>
    <path>
      <move select="Quarter Right" offsetY="-1" />
      <move select="Lead Left" beats="3" scaleX="3" />
      <move select="Forward 3" />
      <move select="Lead Left" beats="2.5" scaleX="2" scaleY="1.5"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2" />
      <move select="Forward 2" />
      <move select="Lead Left" beats="3" scaleX="2" scaleY="2"/>
      <move select="Forward 2" offsetX=".5"/>
    </path>
  </tam>

</tamination>
