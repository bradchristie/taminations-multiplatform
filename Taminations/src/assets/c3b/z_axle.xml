<tamination title="Z Axle">

  <tam title="&quot;Z&quot; Axle" from="Right-Hand Outfacing Z" parts="4;3">
    <formation>
      <dancer gender="boy" x="2" y="-1" angle="0" />
      <dancer gender="girl" x="0" y="-1" angle="180" />
    </formation>
    <path>
      <move select="Run Left" beats="4" scaleY="2" offsetX="-2"/>
      <move select="Swing Left"/>
      <move select="Swing Right"/>
    </path>
    <path>
      <move select="Stand" beats="4" hands="right"/>
      <move select="Swing Left"/>
      <move select="Stand" beats="3"/>
    </path>
  </tam>

  <tam title="&quot;Z&quot; Axle" from="Left-Hand Outfacing Z" parts="4;3">
	  <formation>
	    <dancer gender="boy" x="2" y="1" angle="0" />
	    <dancer gender="girl" x="0" y="1" angle="180" />
	  </formation>
    <path>
      <move select="Run Right" beats="4" scaleY="2" offsetX="-2"/>
      <move select="Swing Right"/>
      <move select="Swing Left"/>
    </path>
    <path>
      <move select="Stand" beats="4" hands="left"/>
      <move select="Swing Right"/>
      <move select="Stand" beats="3"/>
    </path>
  </tam>

  <tam title="&quot;Z&quot; Axle" from="Right-Hand Tandem Z" parts="4;3">
	  <formation>
	    <dancer gender="boy" x="2" y="1" angle="0" />
	    <dancer gender="girl" x="0" y="1" angle="0" />
	  </formation>
    <path>
      <move select="Run Right" beats="4" scaleY="2" offsetX="-2"/>
      <move select="Swing Right"/>
      <move select="Swing Left"/>
    </path>
    <path>
      <move select="Stand" beats="4" hands="right"/>
      <move select="Flip Left"/>
      <move select="Stand" beats="3"/>
    </path>
  </tam>

  <tam title="&quot;Z&quot; Axle" from="Left-Hand Tandem Z" parts="4;3">
    <formation>
      <dancer gender="boy" x="2" y="-1" angle="0" />
      <dancer gender="girl" x="0" y="-1" angle="0" />
    </formation>
    <path>
      <move select="Run Left" beats="4" scaleY="2" offsetX="-2"/>
      <move select="Flip Left"/>
      <move select="Swing Right"/>
    </path>
    <path>
      <move select="Stand" beats="4" hands="left"/>
      <move select="Run Right"/>
      <move select="Stand" beats="3"/>
    </path>
  </tam>

  <tam title="Pass &quot;Z&quot; Axle" from="Right-Hand Infacing Z" parts="2;4;3">
	  <formation>
	    <dancer gender="boy" x="2" y="1" angle="180" />
	    <dancer gender="girl" x="0" y="1" angle="0" />
	  </formation>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Stand" beats="4" hands="left"/>
      <move select="Swing Right"/>
      <move select="Stand" beats="3"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Run Right" beats="4" scaleY="2" offsetX="-2"/>
      <move select="Swing Right"/>
      <move select="Swing Left"/>
    </path>
  </tam>

  <tam title="Pass &quot;Z&quot; Axle" from="Left-Hand Infacing Z" parts="2;4;3">
    <formation>
      <dancer gender="boy" x="2" y="-1" angle="180" />
      <dancer gender="girl" x="0" y="-1" angle="0" />
    </formation>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Stand" beats="4" hands="left"/>
      <move select="Swing Left"/>
      <move select="Stand" beats="3"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Run Left" beats="4" scaleY="2" offsetX="-2"/>
      <move select="Swing Left"/>
      <move select="Swing Right"/>
    </path>
  </tam>

</tamination>
