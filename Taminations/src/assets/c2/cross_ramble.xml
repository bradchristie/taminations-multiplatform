<tamination title="Cross Ramble">

  <tam title="Cross Ramble" from="3/4 Tag" formation="3/4 Tag" parts="4"
       sequencer="gender-specific">
    <path>
      <move select="Lead Left" beats="1" scaleX=".5" />
      <move select="Lead Left" scaleX="3" scaleY="2.5" beats="3" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Left" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Flip Right" beats="4" scaleY="2" offsetX="-2" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Right" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Run Right" beats="4" scaleY="2" offsetX="1" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Right" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Flip Left" beats="4" offsetX="1" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Left" offsetX="1" offsetY="-.5" />
    </path>
  </tam>

  <tam title="Cross Ramble" from="3/4 Tag, Boys in Center"
       formation="3/4 Tag" parts="4"
       sequencer="gender-specific">
    <formation>
      <dancer gender="girl" x="-3" y="1" angle="180"/>
      <dancer gender="boy" x="0" y="-3" angle="180"/>
      <dancer gender="girl" x="-3" y="-1" angle="180"/>
      <dancer gender="boy" x="0" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Lead Left" beats="1" scaleX=".5" />
      <move select="Lead Left" scaleX="3" scaleY="2.5" beats="3" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Left" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Run Right" beats="4" scaleY="2" offsetX="1" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Right" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Flip Right" beats="4" scaleY="2" offsetX="-2" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Left" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Flip Left" beats="4" offsetX="1" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Right" offsetX="1" offsetY="-.5" />
    </path>
  </tam>

  <tam title="Cross Ramble" from="3/4 Tag, Girls in Center"
       formation="3/4 Tag" parts="4"
       sequencer="gender-specific">
    <formation>
      <dancer gender="boy" x="-3" y="1" angle="180"/>
      <dancer gender="girl" x="0" y="-3" angle="180"/>
      <dancer gender="boy" x="-3" y="-1" angle="180"/>
      <dancer gender="girl" x="0" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Lead Left" beats="1" scaleX=".5" />
      <move select="Lead Left" scaleX="3" scaleY="2.5" beats="3" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Right" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Run Right" beats="4" scaleY="2" offsetX="1" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Left" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Flip Right" beats="4" scaleY="2" offsetX="-2" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Right" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Flip Left" beats="4" offsetX="1" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Left" offsetX="1" offsetY="-.5" />
    </path>
  </tam>

  <tam title="_Cross Ramble Part 1" from="3/4 Tag" formation="3/4 Tag"
       display="no" parts="4">
    <path>
      <move select="Lead Left" beats="1" scaleX=".5" />
      <move select="Lead Left" scaleX="3" scaleY="2.5" beats="3" />
    </path>
    <path>
      <move select="Flip Right" beats="4" scaleY="2" offsetX="-2" />
    </path>
    <path>
      <move select="Run Right" beats="4" scaleY="2" offsetX="1" />
    </path>
    <path>
      <move select="Flip Left" beats="4" offsetX="1" />
    </path>
  </tam>

  <tam title="_Cross Ramble Part 1" from="3/4 Tag LH" formation="3/4 Tag LH"
       display="no" parts="4">
    <path>
      <move select="Lead Left" beats="1" scaleX=".5" />
      <move select="Lead Left" scaleX="3" scaleY="2.5" beats="3" />
    </path>
    <path>
      <move select="Flip Right" beats="4" scaleY="2" offsetX="-2" />
    </path>
    <path>
      <move select="Run Left" beats="4" scaleY="2" offsetX="1" />
    </path>
    <path>
      <move select="Flip Right" beats="4" offsetX="1" />
    </path>
  </tam>

</tamination>
