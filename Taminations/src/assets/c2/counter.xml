<tamination title="Counter">

  <tam title="Counter"
       from="Quarter Tag"
       formation="Quarter Tag" >
    <path>
      <move select="Extend Left" beats="4" scaleX="3" scaleY="3" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Forward 1.5" />
    </path>
    <path>
      <move select="Extend Right" beats="4" scaleX="3" scaleY="2" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Run Right" beats="2" offsetX="1.5" offsetY="1" />
    </path>
    <path>
      <move select="Hinge Right" />
      <move select="Swing Right" offsetX="1" />
      <move select="Counter Rotate Right 0 -2" hands="right" offsetY="-.5"/>
    </path>
    <path>
      <move select="Hinge Right" />
      <move select="Swing Right" offsetX="-1" />
      <move select="Counter Rotate Right 2 0" hands="right" offsetY=".5"/>
    </path>
  </tam>

